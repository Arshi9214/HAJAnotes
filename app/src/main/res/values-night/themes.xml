<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HajaNotes" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/surface_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue_light</item>
        <item name="colorOnSecondary">@color/surface_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <!-- Customize your theme here. -->

        <item name="iconsColor">@color/primary_blue_light</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="snackbarContainer">@color/card_background_dark</item>
        <item name="snackbarOnContainer">@color/text_primary_dark</item>
        <item name="divider">@color/divider_background_dark</item>
        <item name="inputColor">@color/input_color_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
    </style>

    <!-- custom material button -->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
        <item name="strokeColor">@color/primary_blue_light</item>
        <item name="android:textColor">@color/primary_blue_light</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dimen16dp</item>
        <item name="cornerSizeBottomRight">@dimen/dimen4dp</item>
        <item name="cornerSizeTopLeft">@dimen/dimen16dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen16dp</item>
    </style>
    <!-- custom material button -->
</resources>